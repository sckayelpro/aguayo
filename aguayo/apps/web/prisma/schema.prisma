generator client {
  provider = "prisma-client-js"
  output   = "./generated/client"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  name      String?
  image     String?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  services  Service[]
  bookings  Booking[]
}

model Service {
  id          String     @id @default(cuid())
  title       String
  description String
  category    String
  price       Int
  createdAt   DateTime   @default(now())
  userId      String
  user        User       @relation(fields: [userId], references: [id])

  bookings    Booking[]  // ðŸ‘ˆ relaciÃ³n inversa
}

model Booking {
  id        String   @id @default(cuid())
  serviceId String
  userId    String
  status    String   @default("pending")
  createdAt DateTime @default(now())

  service   Service  @relation(fields: [serviceId], references: [id])
  user      User     @relation(fields: [userId], references: [id])
}
